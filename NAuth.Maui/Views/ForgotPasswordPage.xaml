<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAuth.Maui.Views.ForgotPasswordPage"
             Title="Recuperar Senha">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Recuperar Senha" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Digite seu e-mail para receber o link de recuperacao de senha" 
                   FontSize="14" 
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>

            <Frame BorderColor="{StaticResource Primary}" 
                   HasShadow="True"
                   Padding="0"
                   CornerRadius="10">
                <VerticalStackLayout Padding="20" Spacing="15">
                    
                    <Label Text="E-mail" FontSize="14" TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding Email}" 
                           Placeholder="Digite seu e-mail"
                           Keyboard="Email"
                           ReturnType="Done"/>

                    <Button Text="Enviar E-mail de Recuperacao" 
                            Command="{Binding SendRecoveryEmailCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="5"
                            Margin="0,10,0,0"/>

                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}"
                                       HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Voltar ao Login" 
                    Command="{Binding NavigateToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
