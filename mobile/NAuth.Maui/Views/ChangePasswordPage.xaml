<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAuth.Maui.Views.ChangePasswordPage"
             Title="Alterar Senha">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Alterar Senha" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Frame BorderColor="{StaticResource Primary}" 
                   HasShadow="True"
                   Padding="0"
                   CornerRadius="10">
                <VerticalStackLayout Padding="20" Spacing="15">
                    
                    <Label Text="Senha Atual" FontSize="14" TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding OldPassword}" 
                           Placeholder="Digite sua senha atual"
                           IsPassword="True"
                           ReturnType="Next"/>

                    <Label Text="Nova Senha" FontSize="14" TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding NewPassword}" 
                           Placeholder="Minimo 8 caracteres"
                           IsPassword="True"
                           ReturnType="Next"/>

                    <Label Text="Confirmar Senha" FontSize="14" TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding ConfirmPassword}" 
                           Placeholder="Digite a senha novamente"
                           IsPassword="True"
                           ReturnType="Done"/>

                    <Button Text="Alterar Senha" 
                            Command="{Binding ChangePasswordCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="5"
                            Margin="0,10,0,0"/>

                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}"
                                       HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Cancelar" 
                    Command="{Binding NavigateBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
